                <span>Comedy</span>*@
            </div>
            <p class="description">
                @Model.brief
            </p>
            <div class="details">
                <h3>Director</h3>
                <span>@Model.director</span>
            </div>
            <div class="details">
                <h3>Writers</h3>
                <span>@Model.writer</span>
            </div>
            <div class="details">
                <h3>Stars</h3>
                @{
                    int num = 0;
                }
                @foreach(var star in ViewBag.stars){
                    num += 1;

                    <span>@star.name </span>
                    if(num == 4   )
                    {
                        break;
                    }
                }
                
            </div>
        </div>
    </div>
    <!-- End Movie details -->
    <!-- Start Awards -->
    <div class="awards">
        <div class="container">
            <p>
                <span>Awards</span>
                @Model.won  
                @if (@Model.won != null)
                {
                    @Html.Raw("&")
                }
                @Model.nominated
