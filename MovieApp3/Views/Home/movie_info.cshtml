                    </div>
                </div>
            </div>
            <div class="media">
                <div class="poster">
                    <div class="image">
                        <img src="@Url.Content(@Model.poster)" alt="" />
                    </div>
                </div>
                <div class="trailer">
                    <video src="~/videos/trailer.mp4"></video>
                </div>
                <div class="more-details">
                    <div class="more">
                        <!-- <video src="~/videos/shazam.mp4"></video> -->
                        <button>
                            <i class="fa-brands fa-youtube"></i>
